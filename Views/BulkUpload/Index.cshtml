
<div id="dlgUpload" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Upload Contacts</h4>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary()
                <div>
                    <label for="fileUpload">Select a CSV File</label> <input type="file" name="fileUpload" id="uploadControl" />
                    <input type="submit" value="Upload" onclick="handleUploadClientside();" style="margin-top:10px;" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>

